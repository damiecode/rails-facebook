<div class='row'>
  <div class='col-12 col-auto'>
    <%= form_with(model:  @post) do |f| %>
      <div class='form-group row'>
        <%= f.label :content, class: 'col-sm-2 col-form-label'  %>
        <div class='col-sm-7'>
          <%= f.text_area :content,rows: 6, class: 'form-control', placeholder: 'Whats on your mind', autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-sm-2 col-sm-8">
          <%= f.submit class: 'btn btn-primary btn-lg custom-btn text-center' %>
        </div>
      </div>
    <% end %>
  </div>
</div>