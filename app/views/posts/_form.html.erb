<div class='row'>
  <div class='col'>
    <%= form_with(model:  @post) do |f| %>
      <div class='form-group row'>
        <div class='col'>
          <%= f.text_area :content,rows: 6,cols: 110, class: 'form-control', placeholder: 'Whats on your mind', autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col">
          <%= f.submit class: 'btn btn-primary btn-lg custom-btn text-center' %>
        </div>
      </div>
    <% end %>
  </div>
</div>